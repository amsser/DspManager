                                        <div class="col-md-5">
                                        <input type="text" name="Size" ng-model="ad.Size" class="form-control input-xs" id="count_cost">
                                        </div>
                                    </div>
                                    </div>
                                    </div>

                                    <div class="row" >
                                        <div class="col-md-2 col-sm-offset-1">
                                        <label class="control-label">类型</label>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="radio">
                                                <label>
                                                <input type="radio" name="Ad_type" ng-model="ad.Ad_type" value="1" >
                                                banner
                                                </label>
                                            </div>

                                        </div>

                                    </div>

                                    <!-- Use react -->
                                    <div class="row" SelectedOpt='{ad.Priority}' id='priority_select'></div>
                                    <!-- Use react -->

                                    <div class="row">
                                    <div class="col-md-4 col-sm-offset-1">
                                    <label class="control-label" for="inputDefault">第三方监测地址</label>
                                    <input type="text" class="form-control" ng-model="ad.Thirdparty_url" name="Thirdparty_url">
                                    </div>
                                    </div>  

                                    <div class="row">
                                    <div class="col-md-4 col-sm-offset-1">
                                    <label class="control-label" for="inputDefault">落地页地址</label>
                                    <input type="text" class="form-control" ng-model="ad.Landingpage_url" name="Landingpage_url">
                                    </div>
                                    </div>

                                    <div class="row">
                                    <div class="col-md-4 col-sm-offset-1">
