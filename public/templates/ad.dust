                    <div class="col-md-2">
                            <a href="/ad/get?o_id={Order_id}"><button type="button" class="btn btn-success btn-md">添加</button></a>
                    </div>

                    </div>

                    <table class="table table-striped table-hover ">
                        <thead id="titlediv">
                            <tr>
                            <th>广告ID</th>
                            <th>广告尺寸</th>
                            <th>创意地址</th>
                            </tr>
                        </thead>
                        <tbody id="recordsdiv">
                            {#ads}
                            <tr>
                            <td>{Ad_name}</td>
                            <td>{Size}</td>
                            <td><a href="{Creative_url}">查看创意</a></td>
                            <td>
                                <a href="/ad/get?id={_id}&o_id={Order_id}"><button type="button" class="btn btn-success btn-xs">编辑</button></a>
                                <a href="/ad/delete?id={_id}&o_id={Order_id}"><button type="button" class="btn btn-danger btn-xs">删除</button></a>
