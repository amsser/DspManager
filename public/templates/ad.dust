                                    <input type="text" class="form-control" ng-model="ad.Creative_url" name="Creative_url">
                                    </div>
                                    </div>

                                    <div class="row">
                                    <div class="col-md-4 col-sm-offset-1">
                                    <label class="control-label" for="inputDefault">展示监测地址</label>
                                    <input type="text" class="form-control" ng-model="ad.Displaymonitor_url" name="Displaymonitor_url">
                                    </div>
                                    </div>

                                    <div class="row">
                                    <div class="col-md-4 col-sm-offset-1">
                                    <label class="control-label" for="inputDefault">点击监测地址</label>
                                    <input type="text" class="form-control" ng-model="ad.Clickmonitor_url" name="Clickmonitor_url">
                                    </div>
                                    </div>

